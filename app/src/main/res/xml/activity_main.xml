<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculatorText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.285"
        android:layout_alignParentTop="true"
        android:text="input"
        android:textAlignment="textEnd"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculatorText">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >

            <Button
                android:id="@+id/button_clear"
                android:text="C"
                style="@style/landscapeStyle"/>


            <Button
                android:id="@+id/button_sign"
                android:text="+/-"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_percentage"
                android:text="%"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_division"
                android:text="/"
                style="@style/landscapeStyle"/>
            <Button
                android:id="@+id/button_sin"
                android:text="sin"
                android:textAllCaps="false"
                style="@style/landscapeStyle"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/button_7"
                android:text="7"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_8"
                android:text="8"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_9"
                android:text="9"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_multiply"
                android:text="X"
                style="@style/landscapeStyle"/>
            <Button
                android:id="@+id/button_cos"
                android:text="cos"
                android:textAllCaps="false"
                style="@style/landscapeStyle"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/button_4"
                android:text="4"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_5"
                android:text="5"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_6"
                android:text="6"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_subtraction"
                android:text="-"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_tan"
                android:text="tan"
                android:textAllCaps="false"
                style="@style/landscapeStyle"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/button_1"
                android:text="1"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_2"
                android:text="2"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_3"
                android:text="3"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_addition"
                android:text="+"
                style="@style/landscapeStyle"/>
            <Button
                android:id="@+id/button_log"
                android:text="Log 10"
                android:textAllCaps="false"
                style="@style/landscapeStyle"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/button_0"
                android:text="0"
                android:layout_weight="2"
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_dot"
                android:text="."
                style="@style/landscapeStyle"/>

            <Button
                android:id="@+id/button_equals"
                android:text="="
                style="@style/landscapeStyle"/>
            <Button
                android:id="@+id/button_ln"
                android:text="ln"
                android:textAllCaps="false"
                style="@style/landscapeStyle"/>


        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>